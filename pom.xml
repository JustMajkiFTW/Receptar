    <properties>
        <!-- Verzia kompila cieverzia JVM -->
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <!-- Verzia JavaFX -->
        <javafx.version>21</javafx.version>
        <!-- Hlavntrieda aplik-->
        <mainClass>LoginApp</mainClass>
        <!-- Novvlastnospre cieadresJavaFX modulov -->
        <javafx.module.output>${project.build.directory}/javafx-modules</javafx.module.output>
        <!-- Verzia JavaFX Maven Pluginu (pridanpre konzistenciu) -->
        <javafx.maven.plugin.version>0.0.9</javafx.maven.plugin.version>
    </properties>

    <dependencies>

