            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <!-- ========================================================= -->
        <!-- OPRAVA PRE JAVAPACKAGER / JLINK: Platformovmoduly (win)  -->
        <!-- Tieto moduly obsahujbinsktorjlink potrebuje na vytvorenie runtime. -->
        <!-- Sozna'win' classifierom a Maven ich stiahne. -->
        <!-- ========================================================= -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
            <classifier>win</classifier>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
